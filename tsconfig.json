{
    "include": ["src"],
    "compilerOptions": {
        "module": "ESNext",
        "target": "esnext",
        "allowImportingTsExtensions": true,
        "rewriteRelativeImportExtensions": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist/esm",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "types": ["node", "mocha"],
    },
}
