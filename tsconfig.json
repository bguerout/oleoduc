{
    "include": ["src"],
    "exclude": ["node_modules", "dist"],
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "lib": ["esnext"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist/mjs",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "esnext",
        "types": ["node", "mocha"],
    },
}
